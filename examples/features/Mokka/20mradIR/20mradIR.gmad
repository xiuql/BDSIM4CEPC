!include optics.gmad;

! some beamline parameters

option, beampipeRadius = 10 * cm,
        boxSize = 1.0 * m,
        tunnelRadius= 1.0 * m,
        beampipeThickness = 0.1 * cm,
        chordStepMinimum = 0.0000000001 * m,
        deltaIntersection = 0.00000001 * m,
	deltaChord = 0.001 * m,
        lengthSafety = 0.00001 * m,
        thresholdCutCharged = 100 * KeV,
        thresholdCutPhotons = 100 * KeV;


! 20mrad Interaction Regions: Coded in half.
! Approximate geometry model


ir:element,l=7.85*m,geometry="mokka:geomlist.sql",bmap="mokka:../FieldMaps/SiD_fields.txt";

IntRegion:line=(ir);

use,period=IntRegion;


option, ngenerate=1, physicsList="em_standard",
randomSeed=-1;

beam,  particle="e-",
       energy=250 * GeV,
       distrType="guineapig_slac",
       distrFile="../../ILC/2mrad/bunches/beam.dat";
